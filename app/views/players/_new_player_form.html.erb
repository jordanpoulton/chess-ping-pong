<div id="new_player_signup_form">
  <%= form_for(@player) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.text_field :password_confirmation %>
    </div>
    <div class="actions" type="hidden">
      <%= f.hidden_field :submit, :value => "Go", :id => "new_player_submit"%>
    </div>
  <% end %>
</div>
